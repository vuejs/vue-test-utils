{
  "name": "vue-test-utils",
  "version": "1.0.0",
  "description": "Utilities for testing Vue components",
  "main": "index.js",
  "scripts": {
    "lint": "eslint src test --ignore-path .gitignore",
    "lint:fix": "npm run lint -- --fix",
    "test": "npm run lint && npm run test:unit && npm run test:unit:karma",
    "test:unit": "cross-env BABEL_ENV=test mocha-webpack --webpack-config test/unit/setup/webpack.config.js test/unit/specs --recursive --require test/unit/setup/mocha.setup.js",
    "test:unit:karma": "cross-env BABEL_ENV=test TARGET=browser karma start test/unit/setup/karma.conf.js --single-run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vuejs/vue-test-utils.git"
  },
  "author": "vuejs",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vuejs/vue-test-utils/issues"
  },
  "homepage": "https://github.com/vuejs/vue-test-utils#readme",
  "devDependencies": {
    "babel-plugin-istanbul": "^4.1.4",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "chai": "^4.0.0",
    "cross-env": "^5.0.0",
    "css-loader": "^0.28.4",
    "eslint": "^3.19.0",
    "eslint-config-vue": "^2.0.2",
    "eslint-plugin-vue": "^2.0.1",
    "eslint-plugin-vue-libs": "^1.1.0",
    "jsdom": "^11.0.0",
    "jsdom-global": "^3.0.2",
    "karma": "^1.7.0",
    "karma-coverage": "^1.1.1",
    "karma-mocha": "^1.3.0",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-phantomjs-shim": "^1.4.0",
    "karma-sinon-chai": "^1.3.1",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-spec-reporter": "^0.0.31",
    "karma-webpack": "^2.0.3",
    "mocha": "^3.4.2",
    "mocha-webpack": "next",
    "sinon": "^2.3.2",
    "sinon-chai": "^2.10.0",
    "vue": "^2.3.3",
    "vue-loader": "^12.2.1",
    "vue-template-compiler": "^2.3.3",
    "webpack": "^2.6.1",
    "webpack-node-externals": "^1.6.0"
  },
  "peerDependencies": {
    "vue": "2.x"
  },
  "dependencies": {
    "sizzle": "^2.3.3"
  }
}
